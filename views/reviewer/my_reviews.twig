{% extends 'templates/template.twig' %}
{% block title %}Moje hodnocení{% endblock %}
{% block content %}
    <h2>Moje hodnocení</h2>
    <div class="form-group col-md-8 col-md-offset-2 col-xs-12">
        <table class="table table-responsive table-striped reviews">
            <thead>
                <tr>
                    <td><strong>Název</strong></td>
                    <td><strong>PDF</strong></td>
                    <td><strong>Originalita</strong></td>
                    <td><strong>Téma</strong></td>
                    <td><strong>Pravopis</strong></td>
                    <td><strong>Srozum.</strong></td>
                    <td><strong>Průměr hodnoc.</strong></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
            {% for row in arr %}
                <tr>
                    <td>{{ row.nazev }}</td>
                    <td><a href="{{ makeURL('Home', 'download_pdf', '') }}{{ row.pdf }}"><span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span></a></td>
                    <td>{{ row.originalita }}</td>
                    <td>{{ row.tema }}</td>
                    <td>{{ row.pravopis }}</td>
                    <td>{{ row.srozumitelnost }}</td>
                    <td>{{ row.prumer|number_format(2, '.', ',') }}</td>
                    {% if row.schvaleno == 0 %}
                    <td><a href="{{ makeURL('Reviewer', 'edit_review', '') }}{{ row.id }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                    {% else %}
                    <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}