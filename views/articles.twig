{% extends 'templates/template.twig' %}
{% block title %}Články{% endblock %}
{% block content %}
    <h2>Články</h2>
    <div class="row">
        <div class="form-group col-xs-12">
            <table class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <td><strong>Název článku</strong></td>
                        <td><strong>Autoři</strong></td>
                        <td><strong>Abstratkt</strong></td>
                        <td><strong>PDF</strong></td>
                    </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.nazev }}</td>
                        <td>{{ article.autori }}</td>
                        <td>{{ article.abstract|truncate(300, true) }}</td>
                        <td><a href="{{ makeURL('Home', 'download_pdf', '') }}{{ article.pdf }}"><span class="glyphicon glyphicon-download-alt article" aria-hidden="true"></span></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}